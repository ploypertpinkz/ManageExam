</head>

<body>
  <section class="hero is-info">
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <article class="media">
              <figure class="media-left">
                <p class="image is-96x96">
                  <br><img src="./img/logo.png">
                </p>
              </figure>
              <div class="media-content">
                <div class="content">
                  <p>
                    <h1 class="title">
                      ระบบจัดการการสอบ
                    </h1>
                    <h2 class="subtitle">
                      มหาวิทยาลัยบูรพา
                    </h2><br>
                  </p>
                </div>
              </div>
            </article>
          </div>
          <!-- ปุ่มออกจากระบบ -->
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
              <a class="navbar-item" href="/login">
                ออกจากระบบ
            </a>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </section>

  <section class="section has-background-light">
    <div class="container">
      <div class="columns">
        <!-- left menu -->
        <div class="column is-2 ">
          <div class="box ">
            <aside class="menu">
              <ul class="menu-list">
                <li><a href="/main">หน้าหลัก</a></li>
                <li><a href="/main">ถอยกลับ</a></li>
              </ul>
            </aside>
          </div>
        </div>

        <!-- box -->
        <div class="column is-10">
          <div class="content is-medium">
            <div class="box">
              <h4 id="const" class="title is-3 has-text-centered">จัดการอาจารย์</h4>
              <div class="container">
                <div class="columns">
                  <div class="column is-9">
                    <table class="table table-striped">
                      <div><a href="/teacher/create/<%= teacher[i] %>" class="button is-success">+เพิ่ม</a></div>
                      <tr>
                        <td><b>ลำดับ</b></td>
                        <td><b>ชื่อ-นามสกุล</b></td>
                        <td><b>อีเมล์</b></td>
                        <td colspan="3"><b>Action</b></td>
                      </tr>
                      </thead>
                      <tbody>
                        <% for(var i=0; i < teacher.length; i++) { %>

                        <tr>
                          <td><%= i+1%></td>
                          <td><%= teacher[i].name %></td>
                          <td><%= teacher[i].email %></td>
                          <td><a href="/teacher/read/<%= teacher[i]._id %>" class="button is-info">ดู</a></td>
                          <td><a href="/teacher/manageTeacheredit/<%= teacher[i]._id %>"
                            class="button is-link">แก้ไข</a></td>
                          <td><a href="/teacher/delete/<%= teacher[i]._id %>" class="btn btn-danger">ลบ</a></td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
  </section>
</body>

