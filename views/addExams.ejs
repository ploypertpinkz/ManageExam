<!DOCTYPE html>
<html lang="en">

<head>
    <title>เพิ่มการสอบ</title>
    <!-- logo title -->
    <link rel="shortcut icon" href="./img/logo.png" type="image/x-icon">

    <meta charset="UTF-8">
    <!-- <link rel="icon" type="image/png" sizes="32x32" href="../images/favicon.png"> -->
    <link rel="stylesheet" href="./css/style.css" type="text/css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel='stylesheet' href='https://unpkg.com/bulma@0.7.4/css/bulma.min.css'>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
        integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel='stylesheet' href="../css/prism.css">
    <link rel="stylesheet" href="../css/cheatsheet.css">

</head>

<body>
    <!-- หัวเว็บ -->
    <section class="hero is-info">
        <div class="hero-head">
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-brand">
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-96x96">
                                    <br><img src="./img/logo.png">
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <h1 class="title">
                                            ระบบจัดการการสอบ
                                        </h1>
                                        <h2 class="subtitle">
                                            มหาวิทยาลัยบูรพา
                                        </h2><br>
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                    <!-- ปุ่มออกจากระบบ -->
                    <div id="navbarMenuHeroA" class="navbar-menu">
                        <div class="navbar-end">
                            <a class="navbar-item" href="/login">
                                ออกจากระบบ
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </section>

    <!-- body -->
    <section class="section has-background-light">
        <div class="container">
            <div class="columns">

                <!-- box -->
                <div class="column is-12">
                    <div class="content is-medium">
                        <div class="box">
                            <h4 id="const" class="title is-3 has-text-centered">เพิ่มการสอบ</h4>
                            <br><br>
                            <div class="container">
                                <form method="POST" action="/addExams/post">
                                    <div class="columns">
                                        <div class="column is-11">

                                            <!-- Search  card -->
                                            <div class="card-content">
                                                <div class="content">
                                                    <div class="field is-full">
                                                        <div class="field-body">
                                                            <div class="field-label is-normal">
                                                                <p class="subtitle is-5">วิชา:</p>
                                                            </div>
                                                            <div class="field">
                                                                <div class="select">
                                                                    <select name="subject" required="">
                                                                        <option disabled selected>เลือกวิชา</option>
                                                                        <% for(var i=0; i < subjects.length; i++) { %>
                                                                        <option value="<%= subjects[i]._id %>" required="">
                                                                            <%= subjects[i].ID_Subject + " " + subjects[i].engname %>
                                                                        </option>
                                                                        <% } %>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                       
                                                        </div>
                                                    </div><br>
                                                  
                                                    <div class="field is-horizontal">
                                                        <div class="field-label is-normal">
                                                            <p class="subtitle is-5">วันที่:</p>
                                                        </div>
                                                        <div class="field">
                                                            <p class="control">
                                                                <input class="input is-medium " type="date" name="date"
                                                                    required="" placeholder="mm-dd-yyyyy">
                                                            </p>
                                                        </div>
                                                        &ensp;&ensp;
                                                        <div class="field-label is-normal">
                                                            <p class="subtitle is-5">เวลา:</p>
                                                        </div>
                                                        <div class="field is-one-fifth">
                                                            <p class="control">
                                                                <input class="input is-medium " type="time" required=""
                                                                    name="timeF" placeholder="00.00">
                                                            </p>
                                                        </div>
                                                        <div class="field">
                                                            <p class="control">
                                                                &ensp; _ &ensp;
                                                            </p>
                                                        </div>
                                                        <div class="field">
                                                            <p class="control">
                                                                <input class="input is-medium " type="time" required=""
                                                                    name="timeL" placeholder="00.00">
                                                            </p>
                                                        </div>
                                                        <div class="field-label is-normal has-text-centered">
                                                            <p class="subtitle is-5">น.</p>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            </div><br>

                                            <div class="card-content level-right">
                                                <div class="content">
                                                    <a class="button is-danger is-medium" href="/manageExams">ยกเลิก</a>
                                                    <input type="submit" class="button is-info is-medium"
                                                        value="บันทึก">
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
    </section>

    <script async type="text/javascript" src="../js/bulma.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/prism/9000.0.1/prism.js'></script>
    <script>
        window.addEventListener('resize', () => {
            const divs = document.querySelectorAll(".menu-list");
            if (window.innerWidth < 768) {
                divs.forEach(div => div.classList.add("tags"));
            }
            else {
                divs.forEach(div => div.classList.remove("tags"));
            }
        });
    </script>
</body>

</html>